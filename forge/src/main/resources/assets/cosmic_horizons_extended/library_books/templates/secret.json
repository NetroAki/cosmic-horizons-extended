{
  "title": "${adjective} ${nouns}",
  "variables": {
    "adjective": "wordbank:adjectives",
    "nouns": "wordbank:nouns"
  },
  "pages": [
    {
      "template": "# ${title}\n\n${secret_message}\n\n${cipher_text}",
      "components": [
        {
          "type": "replace",
          "target": "${secret_message}",
          "replacement": "wordbank:secret_messages"
        },
        {
          "type": "replace",
          "target": "${cipher_text}",
          "replacement": "wordbank:cipher_texts"
        }
      ]
    },
    {
      "template": "## The Truth About ${nouns}\n\n${secret_truth}\n\n#warning\n${warning_message}",
      "components": [
        {
          "type": "replace",
          "target": "${secret_truth}",
          "replacement": "wordbank:secret_truths"
        },
        {
          "type": "replace",
          "target": "${warning_message}",
          "replacement": "wordbank:warning_messages"
        }
      ]
    },
    {
      "template": "## Coordinates\n\n${coordinates}\n\n## Clues\n\n${clues}",
      "components": [
        {
          "type": "replace",
          "target": "${coordinates}",
          "replacement": "wordbank:secret_coordinates"
        },
        {
          "type": "replace",
          "target": "${clues}",
          "replacement": "wordbank:secret_clues"
        }
      ]
    }
  ]
}
